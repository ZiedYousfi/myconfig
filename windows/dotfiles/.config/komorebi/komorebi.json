  "floating_applications": [
    { "kind": "Title", "id": "Picture-in-Picture", "matching_strategy": "Regex" },
    { "kind": "Class", "id": "Chrome_WidgetWin_1", "matching_strategy": "Equals" },
    { "kind": "Class", "id": "MozillaDialogClass", "matching_strategy": "Equals" }
  ],

  "ignore_rules": [
    { "kind": "Exe", "id": "zebar.exe", "matching_strategy": "Equals" }
  ]
}
